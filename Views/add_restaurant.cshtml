<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="../Content/styles.css">
    <title></title>
  </head>
  <body>
    <div class="jumbotron">
      <div class="container">
        <h1>Add Restaurant</h1>
      </div>
    </div>
    <div class="container well">
        <div class="form-group">
          <form action="/restaurants/add" method="post">
            <label>Restaurant name:</label>
            <input type="text" name="name" value="" required> <br>
            <label>Description: </label>
            <input type="text" name="description" value="" required> <br>
            <label>Address: </label>
            <input type="text" name="address" value="" required> <br>
            <label>Phone: </label>
            <input type="text" name="phone" value="" required> <br>
            <label>Email: </label>
            <input type="text" name="email" value="" required> <br>
            <label>Cuisine Type: </label>
            <select name="cuisine_id">
              @foreach(var cuisine in @Model)
              {
                <option value="@cuisine.GetId()">@cuisine.GetCuisineType()</option>
              }
            </select> <br>
            <button class="btn btn-success btn-warning" type="submit" name="button">Add Restaurant</button>
            <a href="/"><button class="btn btn-warning" type="button" name="button">Home</button></a>
          </form>
      </div>
    </div>
    <footer>
     <p>&copy; 2016 Best Restaurants in Town, Inc.</p>
   </footer>
  </body>
</html>
