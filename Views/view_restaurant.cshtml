<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="../Content/styles.css">
    <title></title>
  </head>
  <body>
    <div class="jumbotron">
      <div class="container">
        <h1>@Model.GetName() </h1>
      </div>
    </div>
    <div class="container view-restaurant">
      <h2>@Model.GetName() | @Model.DisplayStars(@Model.GetAverageStars()) Stars </h2>
      <h4></h4>
      <h4>Address: @Model.GetAddress() | Phone number: @Model.GetPhone() | Email: @Model.GetEmail()</h4>
      <h4>Description:   @Model.GetDescription()</h4>
      <p>

      </p>
      <ul>
        @if(Model.GetReviews().Count == 0)
        {
          <h4>No Reviews</h4>
        }
        @foreach(var review in Model.GetReviews())
        {
          <div class="review well">
            <h4>@review.GetName() | Rating: @review.GetStars() stars</h4>
            <p>
              @review.GetText()
            </p>
            <h6>Date of Review: @review.GetDate()</h6>
          </div>
        }
      </ul>
      <p>
        <a href="/"><button class="btn btn-warning">Home</button></a>
        <a href="/reviews/add/@Model.GetId()"><button class="btn btn-warning">Add Review</button></a>
      </p>
    </div>
    <footer>
     <p>&copy; 2016 Best Restaurants in Town, Inc.</p>
   </footer>
  </body>
</html>
