<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="Content/styles.css">
    <title>The Best Restaurants in Town</title>
  </head>
  <body>
    <div class="jumbotron">
      <div class="container">
        <h1>The Best Restaurants in Town</h1>
      </div>
    </div>
    <div class="container">

      @if(Model.Count == 0)
      {
        <h1>No Cuisines</h1>
      }
      <ul class="text-center">
        @foreach(var cuisine in Model)
        {
          <li><a href="/restaurants/cuisine/@cuisine.GetId()">@cuisine.GetCuisineType()</a></li>
        }
      </ul>
      <a href="/restaurants/add"><button type="button" class="btn btn-warning center-block" name="button">Add Restaurant</button></a>
      <a href="/restaurants/all"><button type="button" class="btn btn-warning center-block" name="button">All Restaurants</button></a>

    </div>
    <footer>
     <p>&copy; 2016 Best Restaurants in Town, Inc.</p>
   </footer>
  </body>
</html>
